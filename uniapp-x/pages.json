{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://doc.dcloud.net.cn/uni-app-x/collocation/pagesjson.html
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app x",
				"navigationStyle": "custom"
			}
		},
		{
		  "path" : "pages/dialog-page/dialog-page",
		  "style" :
		  {
		    "navigationBarTitleText" : "dialog-page"
		  }
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app x",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
  "condition" : { //模式配置，仅开发期间生效
    "current": 1, //当前激活的模式(list 的索引项)
    "list": [
      {
        "name": "dialog-page", //模式名称
        "path": "pages/dialog-page/dialog-page", //启动页面，必选
        "query": "" //启动参数，在页面的onLoad函数里面得到
      },{
        "name": "index", //模式名称
        "path": "pages/index/index", //启动页面，必选
        "query": "" //启动参数，在页面的onLoad函数里面得到
      }
    ]
  }
}
