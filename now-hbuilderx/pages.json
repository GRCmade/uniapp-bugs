{
  "easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		},
    {
      "path": "pages/order/orderList/index",
      "style": {
        "navigationBarTitleText": "订单列表"
      }
    },
    {
      "path": "pages/index/index-next",
      "style": {
        "navigationBarTitleText": "index-next"
      }
    },
    {
      "path": "pages/index/index-next-next",
      "style": {
        "navigationBarTitleText": "index-next-next"
      }
    },
		{
			"path" : "pages/tabbar/tabbar-1/tabbar-1",
			"style" : 
			{
				"navigationBarTitleText" : "tabbar-1"
			}
		},
		{
			"path" : "pages/tabbar/tabbar-2/tabbar-2",
			"style" : 
			{
				"navigationBarTitleText" : "tabbar-2"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "/static/logo.png",
			"selectedIconPath": "/static/logo-click.png",
			"text": "组件"
		}, {
			"pagePath": "pages/tabbar/tabbar-1/tabbar-1",
			"iconPath": "/static/logo.png",
			"selectedIconPath": "/static/logo-click.png",
			"text": "接口"
		}, {
			"pagePath": "pages/tabbar/tabbar-2/tabbar-2",
			"iconPath": "/static/logo.png",
			"selectedIconPath": "/static/logo-click.png",
			"text": "接口"
		}]
	},
  "condition": { //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": [
      {
        "name": "订单列表测试", //模式名称
        "path": "pages/order/orderList/index",
        "query": "name=sd&zzz=xxx"
      }
    ]
  }
}
